<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/btn_radio_color"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/main">

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/backBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:background="?android:selectableItemBackgroundBorderless"
            android:clickable="true"
            android:focusable="true"
            android:padding="10dp"
            android:src="@drawable/ic_arrow_left" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/typeSel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:fontFamily="@font/averia_sans_libre_light"
            android:textColor="#fff"
            android:textSize="18sp"
            tools:text="Type selected" />

        <!-- <androidx.appcompat.widget.LinearLayoutCompat
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignParentEnd="true"
             android:layout_centerVertical="true"
             android:layout_marginEnd="15dp"
             android:gravity="center"
             android:orientation="horizontal"
             tools:ignore="RelativeOverlap">

             <androidx.appcompat.widget.AppCompatImageView
                 android:layout_width="20dp"
                 android:layout_height="20dp"
                 android:src="@drawable/ic_time" />

             <androidx.appcompat.widget.AppCompatTextView
                 android:id="@+id/timer"
                 android:layout_width="wrap_content"
                 android:layout_height="wrap_content"
                 android:layout_marginStart="5dp"
                 android:textColor="#fff"
                 tools:text="00:59" />

         </androidx.appcompat.widget.LinearLayoutCompat>-->
    </RelativeLayout>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical">


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/questions"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:background="@drawable/type_style"
                android:elevation="10dp"
                android:fontFamily="@font/averia_sans_libre_light"
                android:gravity="center"
                android:paddingStart="15dp"
                android:paddingEnd="15dp"
                android:textColor="#1f6bb8"
                android:textSize="15sp"
                tools:text="8/10" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/question"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="-16dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/btn"
                android:elevation="8dp"
                android:fontFamily="@font/averia_sans_libre_light"
                android:gravity="center"
                android:minHeight="100dp"
                android:padding="20dp"
                android:textColor="#fff"
                android:textSize="18sp"
                tools:text="Ilhom bozordan 1 kg. lik tarvuz olib keldi. Tarvuz 99% suvdan iborat edi. Ilhom tarvuzni quyoshda unutib qoldirdi va keyin tarvuz 98% suvdan iborat bo’lib qoldi. Savol: quyoshda qolib ketgandan keyin tarvuzning og’irligi necha kg bo’lgan?" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/variantA"
                style="@style/variant_st"
                android:elevation="5dp"
                app:cardElevation="5dp"
                tools:text="lorem" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/variantB"
                style="@style/variant_st"
                app:cardElevation="5dp"
                tools:text="lorem" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/variantC"
                style="@style/variant_st"
                app:cardElevation="5dp"
                tools:text="lorem" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/variantD"
                style="@style/variant_st"
                android:layout_marginBottom="18dp"
                app:cardElevation="5sp"
                tools:text="lorem" />


            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/nextBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="60dp"
                android:layout_marginEnd="60dp"
                android:layout_marginBottom="20dp"
                android:background="@drawable/btn"
                android:clickable="true"
                android:focusable="true"
                android:fontFamily="@font/averia_sans_libre_light"
                android:foreground="?android:selectableItemBackgroundBorderless"
                android:text="@string/keyingi"
                android:textColor="#fff"
                android:textSize="18sp"
                app:cardElevation="5sp" />

        </androidx.appcompat.widget.LinearLayoutCompat>


    </ScrollView>
</androidx.appcompat.widget.LinearLayoutCompat>